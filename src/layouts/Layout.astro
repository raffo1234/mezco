---
import "@fontsource/bebas-neue";
import "@fontsource/poppins";
import "@fontsource/quicksand";
import "@fontsource/raleway";
import "@fontsource/lobster";
import "@fontsource/nixie-one";
import { ClientRouter } from "astro:transitions";
import "../assets/fonts.css";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Mezco Inmobiliaria: Tu aliado en bienes raíces. Encuentra tu hogar ideal, inversiones seguras y asesoría experta. ¡Transformamos tus sueños en realidad!"
    />
    <title>
      {pageTitle}
      {pageTitle ? " | " : ""}
      Mezco Inmobiliaria
    </title>
    <ClientRouter />
  </head>

  <body id="app" class="opacity-0 transition-opacity duration-300 ease-in-out">
    <slot />
  </body>
</html>
